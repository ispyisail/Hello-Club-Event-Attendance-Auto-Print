{
  "name": "hello-club-next-event-automation",
  "version": "1.3.0",
  "description": "Automated service for printing Hello Club event attendance lists",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js start-service",
    "dashboard": "node web-dashboard/server.js",
    "fetch-events": "node src/index.js fetch-events",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate": "npm run lint && npm test",
    "prepare": "husky install",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "hello-club",
    "automation",
    "attendance",
    "printing",
    "event-management",
    "pdf-generator",
    "raspberry-pi"
  ],
  "author": "ispyisail",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ispyisail/Hello-Club-Event-Attendance-Auto-Print.git"
  },
  "bugs": {
    "url": "https://github.com/ispyisail/Hello-Club-Event-Attendance-Auto-Print/issues"
  },
  "homepage": "https://github.com/ispyisail/Hello-Club-Event-Attendance-Auto-Print#readme",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.12.2",
    "axios-retry": "^4.4.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.2",
    "express": "^5.2.1",
    "joi": "^18.0.1",
    "multer": "^2.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.2",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  }
}
