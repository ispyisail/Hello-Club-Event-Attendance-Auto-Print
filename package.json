{
  "name": "hello-club-next-event-automation",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js start-service",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest __tests__/ --testPathIgnorePatterns=integration",
    "test:integration": "jest __tests__/integration",
    "test:verbose": "jest --verbose",
    "coverage": "jest --coverage",
    "coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "build": "pkg . --targets node18-win-x64 --output dist/hello-club.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist"
  },
  "bin": "src/index.js",
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "src/**/*.js",
      "node_modules/better-sqlite3/**/*",
      "node_modules/node-windows/**/*"
    ],
    "scripts": [
      "src/**/*.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^17.2.2",
    "joi": "^18.0.1",
    "nodemailer": "^7.0.6",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.17.2",
    "winston": "^3.17.0",
    "yargs": "^18.0.0",
    "axios-retry": "^4.4.0",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "pkg": "^5.8.1"
  }
}
